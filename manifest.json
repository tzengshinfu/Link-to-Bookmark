{
    "name": "__MSG_appName__",
    "description": "__MSG_appDesc__",
    "version": "2.4.1",
    "default_locale": "zh_TW",
    "options_page": "options.html",
    "minimum_chrome_version": "26",
    "manifest_version": 2,
    "permissions": [ "contextMenus", "bookmarks", "tabs", "activeTab", "http://*/*", "https://*/*" ],
    "icons": {
        "16": "icon_16.png",
        "48": "icon_48.png",
        "128": "icon_128.png"
    },
    "background": {
        "scripts": ["bg.js"]
    },
    "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*" ],
      "js": ["contentscript.js"],
      "run_at": "document_end"
    }
  ]
}